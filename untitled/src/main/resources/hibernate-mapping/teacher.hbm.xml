<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.xml_based.entity.Teacher" table="teacher">
        <id name="teacherId" column="teacher_Id">
            <generator class="increment"> </generator>

        </id>
        <property name="teacherName" column="teacher_Name" length="100"> </property>
        <property name="teacherQualification" column="teacher_Qualification" length="50"> </property>
        <property name="experienceOfTeaching" column="experience_Of_Teacher" length="50"> </property>
        <property name="studentId" column="student_Id"> </property>


    </class>
</hibernate-mapping>